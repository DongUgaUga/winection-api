pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'winection-api'   // Docker 이미지 이름
        CONTAINER_NAME = 'api'           // 컨테이너 이름
        REPO_URL = 'https://github.com/DongUgaUga/winection-api.git'
        BRANCH = 'main'                  // 사용할 브랜치
    }

    stages {
        stage('Git Clone') {
            steps {
                git branch: "${BRANCH}", url: "${REPO_URL}"
            }
        }

        stage('Build') {
            steps {
                sh 'docker build -t ${DOCKER_IMAGE} .' // Docker 이미지 빌드
                echo 'build success'
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh 'docker stop ${CONTAINER_NAME} || true'  // 기존 컨테이너 중지
                    sh 'docker rm ${CONTAINER_NAME} || true'    // 기존 컨테이너 삭제
                    sh 'docker run -d --name ${CONTAINER_NAME} -p 8000:8000 ${DOCKER_IMAGE}' // 컨테이너 실행
                }
                echo 'Deployment success'
            }
        }
    }
}