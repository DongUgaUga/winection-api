pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'woo204/winection-api'  // Docker Hub Ïù¥ÎØ∏ÏßÄ Í≤ΩÎ°ú
        CONTAINER_NAME = 'api'  // Ïã§ÌñâÌï† Ïª®ÌÖåÏù¥ÎÑà Ïù¥Î¶Ñ
        DOCKER_CREDENTIALS_ID = 'woo'  // JenkinsÏùò Docker Hub Ïù∏Ï¶ù ID
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/DongUgaUga/winection-api.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    withCredentials([
                        string(credentialsId: 'GOOGLE_CLOUD_API_KEY', variable: 'GOOGLE_API_KEY'),
                        string(credentialsId: 'DEEPSEEK_API_KEY', variable: 'DEEPSEEK_API_KEY')
                    ]) {
                        sh """
                        docker build --build-arg GOOGLE_API_KEY=${GOOGLE_API_KEY} \
                                     --build-arg DEEPSEEK_API_KEY=${DEEPSEEK_API_KEY} \
                                     -t ${DOCKER_IMAGE}:latest .
                        """
                    }
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    withDockerRegistry([credentialsId: "${DOCKER_CREDENTIALS_ID}"]) {
                        sh "docker push ${DOCKER_IMAGE}:latest"
                    }
                }
            }
        }

        stage('Deploy to Server') {
            steps {
                script {
                    withCredentials([
                        string(credentialsId: 'GOOGLE_CLOUD_API_KEY', variable: 'GOOGLE_API_KEY'),
                        string(credentialsId: 'DEEPSEEK_API_KEY', variable: 'DEEPSEEK_API_KEY')
                    ]) {
                        sh """
                        docker stop ${CONTAINER_NAME} || true
                        docker rm ${CONTAINER_NAME} || true
                        docker pull ${DOCKER_IMAGE}:latest
                        docker run -d --name ${CONTAINER_NAME} -p 8000:8000 \
                                   -e GOOGLE_CLOUD_API_KEY=${GOOGLE_API_KEY} \
                                   -e DEEPSEEK_API_KEY=${DEEPSEEK_API_KEY} \
                                   ${DOCKER_IMAGE}:latest
                        """
                    }
                }
                echo 'üöÄ Deployment success!'
            }
        }
    }
}
